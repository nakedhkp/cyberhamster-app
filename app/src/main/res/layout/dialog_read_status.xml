<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新阅读状态"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- 未读状态选项 -->
    <LinearLayout
        android:id="@+id/ll_unread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_unread_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_book_placeholder"
            app:tint="@color/colorTextSecondary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="未读"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_unread_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/colorPrimary" />
    </LinearLayout>

    <!-- 在读状态选项 -->
    <LinearLayout
        android:id="@+id/ll_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_reading_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_read"
            app:tint="@color/colorPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="在读"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_reading_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/colorPrimary" />
    </LinearLayout>

    <!-- 已读状态选项 -->
    <LinearLayout
        android:id="@+id/ll_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_read_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            app:tint="@color/colorPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="已读"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_read_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/colorPrimary" />
    </LinearLayout>

    <!-- 取消按钮 -->
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_gray"
        android:text="取消"
        android:textColor="@color/colorWhite" />

</LinearLayout> 